{
    "manifest_version": 2,
    "name": "搜TaoNPM",
    "short_name": "搜包",
    "author": "Pang Xie",
    "version": "0.1.3",
    "description": "在TaoNPM上搜索指定的包. 可以使用关键词或者包名做搜索条件.",
    "homepage_url": "https://github.com/yPangXie/package-search",
    "browser_action": {
        "default_title": "搜TaoNPM",
        "default_icon": "image/icon_search_48.png",
        "default_popup": "search.html"
    },
    "icons": {
        "48": "image/icon_search_48.png",
        "128": "image/icon_search_128.png"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "http://localhost/",
        "http://127.0.0.1/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}