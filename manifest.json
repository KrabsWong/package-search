{
    "manifest_version": 2,
    "name": "XNPM Search",
    "version": "0.0.1",
    "description": "Search package from taobao npm via keywords or package names.",
    "browser_action": {
        "default_title": "TNPM Search",
        "default_icon": "image/icon_search_48.png",
        "default_popup": "search.html"
    },
    "icons": {
        "48": "image/icon_search_48.png",
        "128": "image/icon_search_128.png"
    },
    "permissions": [
        "https://*/*",
        "http://*/*",
        "http://localhost/",
        "http://127.0.0.1/"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}