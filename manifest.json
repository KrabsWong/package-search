{
    "manifest_version": 2,
    "name": "搜TaoNPM",
    "short_name": "搜包",
    "author": "Pang Xie",
    "version": "0.2.0",
    "description": "在TaoNPM上搜索指定的包.",
    "homepage_url": "https://github.com/yPangXie/package-search",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_title": "搜TaoNPM",
        "default_icon": "image/icon_search_48.png",
        "default_popup": "search.html"
    },
    "icons": {
        "48": "image/icon_search_48.png",
        "128": "image/icon_search_128.png"
    },
    "permissions": [
        "storage",
        "https://*/*",
        "http://*/*"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}